{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      "ES2021",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [ "../node_modules/@types" ]
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*.ts",
  ]
}